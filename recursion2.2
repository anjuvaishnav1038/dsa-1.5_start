#include <iostream>
using namespace std;
void printArray(int arr[],int n,int i){
  //base condition:stoping condition
  if(i>=n){
    return;
  }
  //processing
  //ekk case solve krdo 
  cout<<arr[i]<<" ";
  //bakki recursion smbhal lega
  //recursive relation
  printArray(arr,n,i+1);
}

int main() {
int arr[5]={10,20,30,40,50};
int n=5;
int i=0;
printArray(arr,n,i);
  return 0;
}
