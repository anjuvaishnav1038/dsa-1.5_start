// numeric hollow half pyramid
#include <iostream>
using namespace std;
int main()
{   int n;
cout<<"enter the number";
cin>>n;
    for(int row=0;row<n;row++){
        for(int col=0;col<row+1;col++){
            if(col==0||row==col||row==n-1)
            cout<<col+1;
            else{
                cout<<" ";
            }
        }
        cout<<"\n";
    }
    return 0;
}
