//---Stack Basic properties---//
#include<iostream>
#include<stack>
using namespace std;
int main(){
  //creation
  stack<int>st;


  //insertion
  st.push(10);
  st.push(20);
  st.push(30);
  st.push(40);


  //deletion
  st.pop();

  //check elemnt on the top
  cout<<"Elemnt on the top is "<<st.top()<<endl;
  //size
  cout<<"size of stack is "<<st.size()<<endl;
  if(st.empty()){
    cout<<"Stack is empty "<<endl;
  }
  else{
    cout<<"Stack is non empty "<<endl;
  }
  return 0;
}
